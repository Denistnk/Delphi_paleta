procedure TPaletaCores.edTamanhoChange(Sender: TObject);
begin
  if strtoint(edTamanho.Text) > 10 then
   begin
     ShowMessage('O tamanho não pode ser menor que 10!');
     edTamanho.Clear;
   end;
end;

procedure TPaletaCores.FormCreate(Sender: TObject);
begin
  cor := $00E8E8E8;
end;

procedure TPaletaCores.paleta1Click(Sender: TObject);
begin
  cor := paleta1.color;
  Panel26.Visible := True;
  Panel27.Visible := False;
  Panel28.Visible := False;
  Panel29.Visible := False;
end;

procedure TPaletaCores.paleta2Click(Sender: TObject);
begin
  cor := paleta2.color;
  Panel26.Visible := False;
  Panel27.Visible := True;
  Panel28.Visible := False;
  Panel29.Visible := False;
end;

procedure TPaletaCores.paleta3Click(Sender: TObject);
begin
  cor := paleta3.color;
  Panel26.Visible := False;
  Panel27.Visible := False;
  Panel28.Visible := True;
  Panel29.Visible := False;
end;

procedure TPaletaCores.paleta4Click(Sender: TObject);
begin
  cor := paleta4.color;
  Panel26.Visible := False;
  Panel27.Visible := False;
  Panel28.Visible := False;
  Panel29.Visible := True;
end;

end.
