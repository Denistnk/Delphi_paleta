procedure TPaletaCores.btPixelClick(Sender: TObject);
begin
  //Altura
  Panel1.Height   := strtoint(edTamanho.Text);
  Panel2.Height   := strtoint(edTamanho.Text);
  Panel3.Height   := strtoint(edTamanho.Text);
  Panel4.Height   := strtoint(edTamanho.Text);
  Panel5.Height   := strtoint(edTamanho.Text);
  Panel6.Height   := strtoint(edTamanho.Text);
  Panel7.Height   := strtoint(edTamanho.Text);
  Panel8.Height   := strtoint(edTamanho.Text);
  Panel9.Height   := strtoint(edTamanho.Text);
  Panel10.Height  := strtoint(edTamanho.Text);
  Panel11.Height  := strtoint(edTamanho.Text);
  Panel12.Height  := strtoint(edTamanho.Text);
  Panel13.Height  := strtoint(edTamanho.Text);
  Panel14.Height  := strtoint(edTamanho.Text);
  Panel15.Height  := strtoint(edTamanho.Text);
  Panel16.Height  := strtoint(edTamanho.Text);
  Panel17.Height  := strtoint(edTamanho.Text);
  Panel18.Height  := strtoint(edTamanho.Text);
  Panel19.Height  := strtoint(edTamanho.Text);
  Panel20.Height  := strtoint(edTamanho.Text);
  Panel21.Height  := strtoint(edTamanho.Text);
  Panel22.Height  := strtoint(edTamanho.Text);
  Panel23.Height  := strtoint(edTamanho.Text);
  Panel24.Height  := strtoint(edTamanho.Text);
  Panel25.Height  := strtoint(edTamanho.Text);

  //Largura
  Panel1.Width := strtoint(edTamanho.Text);
  Panel2.Width := strtoint(edTamanho.Text);
  Panel3.Width := strtoint(edTamanho.Text);
  Panel4.Width := strtoint(edTamanho.Text);
  Panel5.Width := strtoint(edTamanho.Text);
  Panel6.Width := strtoint(edTamanho.Text);
  Panel7.Width := strtoint(edTamanho.Text);
  Panel8.Width := strtoint(edTamanho.Text);
  Panel9.Width := strtoint(edTamanho.Text);
  Panel10.Width := strtoint(edTamanho.Text);
  Panel11.Width := strtoint(edTamanho.Text);
  Panel12.Width := strtoint(edTamanho.Text);
  Panel13.Width := strtoint(edTamanho.Text);
  Panel14.Width := strtoint(edTamanho.Text);
  Panel15.Width := strtoint(edTamanho.Text);
  Panel16.Width := strtoint(edTamanho.Text);
  Panel17.Width := strtoint(edTamanho.Text);
  Panel18.Width := strtoint(edTamanho.Text);
  Panel19.Width := strtoint(edTamanho.Text);
  Panel20.Width := strtoint(edTamanho.Text);
  Panel21.Width := strtoint(edTamanho.Text);
  Panel22.Width := strtoint(edTamanho.Text);
  Panel23.Width := strtoint(edTamanho.Text);
  Panel24.Width := strtoint(edTamanho.Text);
  Panel25.Width := strtoint(edTamanho.Text);

  edTamanho.Clear;
end;

