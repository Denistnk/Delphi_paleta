procedure TPaletaCores.btGerarClick(Sender: TObject);
begin
  paleta1.Color := clBlack;
  paleta2.Color := RGB(RandomRange(0,255), RandomRange(0,255), RandomRange(0,255));
  paleta3.Color := RGB(RandomRange(0,255), RandomRange(0,255), RandomRange(0,255));
  paleta4.Color := RGB(RandomRange(0,255), RandomRange(0,255), RandomRange(0,255));
end;

